<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:table="sap.ui.table" xmlns:u="sap.ui.unified">
    <Dialog id="idDialogAttachmentUpload" title="Attachment:" contentWidth="auto" resizable="true" draggable="true">
        <VBox class="sapUiResponsiveMargin" >
            <u:FileUploader
                id="idFileUploader"
                change="onChange"/>
        </VBox>
        <beginButton>
            <Button text="Upload File" press="onConfirm"></Button>
        </beginButton>
        <endButton>
            <Button text="Close"  type="Transparent" press="closeDialog"></Button>
        </endButton>
    </Dialog>
</core:FragmentDefinition>