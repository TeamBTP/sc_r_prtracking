<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<SelectDialog
		title="Cost Center"
		items="{
            path: 'costCenterModel>/',
            sorter: { path: 'EX_MCTXT' }                                        
        }" 
		search="searchCostCenter"
		confirm="closeCostCenterFilter"
		cancel="closeCostCenterFilter">
		<StandardListItem
			iconDensityAware="false"
			iconInset="false"
			title="{costCenterModel>EX_MCTXT}"
			description="{costCenterModel>EX_KOSTL}" />
	</SelectDialog>
</core:FragmentDefinition>