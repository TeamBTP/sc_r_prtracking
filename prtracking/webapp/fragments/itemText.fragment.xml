<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="itemText"
		title="Item Text"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Top">
        <content>
            <VBox class="sapUiSmallMargin">
                <Text text="{itemTextModel>/msg}" />
            </VBox>
        </content>
		
	</Popover>
</core:FragmentDefinition>
